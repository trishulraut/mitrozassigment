
@{
    ViewBag.Title = "Index";
}


<script src="~/Content/pages/jquery-1.11.1.min.js"></script>
<script src="~/Content/pages/Employee.js"></script>


<h2>Index</h2>
<input type="hidden" id="txtempid" />
<label for="Name">Name:</label>
<input type="text" id="txtname" class="form-control" name="Name" required />

<label for="Address">Address:</label>
<input type="text" id="txtaddress" class="form-control" name="Address" required />

<label for="Mobile">Mobile Number:</label>
<input type="number" id="txtmobile" class="form-control" name="Mobile" required maxlength="10" pattern="^(\+91[\-\s]?)?[0]?(91)?[789]\d{9}$" />

<label for="Email">Email:</label>
<input type="email" id="txtemail" class="form-control" name="Email" required />

<label for="Department">Department Name:</label>
<select id="ddldepatment" class="form-control">
    @*<option value="1">HR</option>
        <option value="2">ADMINITRATION</option>
        <option value="3">FINACE</option>*@

</select>
<br />
<input type="submit" value="SUBMIT" onclick="saveemployee()" />
<br />
<table id="TblEmployees" class="table-condensed" border="1">
    <thead>
    <th>Employee ID</th>
    <th>Name</th>
    <th>Address</th>
    <th>Mobile Number</th>
    <th>Email</th>
    <th>Department</th>

    </thead>
    <tbody></tbody>
</table>


