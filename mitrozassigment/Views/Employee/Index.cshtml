
@{
    ViewBag.Title = "Index";
}
<script src="~/Content/pages/jquery-1.11.1.min.js"></script>
<script src="~/Content/pages/Employee.js"></script>
<div class="col-lg-12">
    <div class="col-lg-10" style="background: linear-gradient( #fff, #ccc ); ">
        <h2>Add Employee</h2>
        <input type="hidden" id="txtempid" />
        <label for="Name">Name:</label>
        <input type="text" id="txtname" class="form-control" name="Name" required />

        <label for="Address">Address:</label>
        <input type="text" id="txtaddress" class="form-control" name="Address" required />

        <label for="Mobile">Mobile Number:</label>
        <input type="text" id="txtmobile" class="form-control" name="Mobile" required min="10" max="10"   />

        <label for="Email">Email:</label>
        <input type="email" id="txtemail" class="form-control" name="Email"   />

        <label for="Department">Department Name:</label>
        <select id="ddldepatment" class="form-control">
        </select>

        <input type="submit" value="SUBMIT" class="btn btn-success" onclick="saveemployee()" />
        
        <table id="TblEmployees" class="table-condensed" border="1">
            <thead>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Mobile Number</th>
            <th>Email</th>
            <th>Department</th>

            </thead>
            <tbody></tbody>
        </table>

    </div>
</div>